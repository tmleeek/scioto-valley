<script type="text/javascript">
function aitCheck(checkbox)
{
    if(checkbox.checked == false)
    {
        checkbox.checked = true;
        fireEvent(checkbox,'change');
    }
}
function aitUncheck(checkbox)
{
    if(checkbox.checked == true)
    {
        checkbox.checked = false;
        fireEvent(checkbox,'change');
    }
}
</script>
