?><?php
$state = $this->getData('state');
$stringState = $state === null ? 'n/a' : ($state ? 'started' : 'stopped');
?>
<p><?php echo $this->__('Current state:') ?> <span class="<?php echo $state ? 'awas_state_good' : 'awas_state_bad' ?>"><?php echo $this->__($stringState) ?></span></p>
<?php if(!(null === $state)) : ?>
    <?php if($state) : ?>
<button class="scalable delete" onclick="awas_config.runDaemon(true);return false;"><span><?php echo $this->__('Stop searchd') ?></span></button>
    <?php else : ?>
<button class="scalable save" onclick="awas_config.runDaemon();return false;"><span><?php echo $this->__('Start searchd') ?></span></button>
    <?php endif ?>
<?php endif ?>
