?><?php /** @var AW_Advancedsearch_Block_Result_Awkbase $this */?>
<div class="awas-kbase-post-list">
    <?php echo $this->getPager() ?>
    <ul class="awas-kbase-articles">
    <?php foreach($this->getResults() as $article) : ?>
        <li>
            <div class="title">
                <a href="<?php echo $this->getArticleUrl($article) ?>"><?php echo $article->getData('article_title') ?></a>
            </div>
            <?php if(($articleContent = $this->getArticleContent($article))) : ?>
            <div class="short_content">
                <?php echo $articleContent ?>
            </div>
            <div class="more_link">
                <a href="<?php echo $this->getArticleUrl($article) ?>"><?php echo $this->__('Read More') ?></a>
            </div>
            <?php endif ?>
        </li>
    <?php endforeach ?>
    </ul>
    <?php echo $this->getPager() ?>
</div>
