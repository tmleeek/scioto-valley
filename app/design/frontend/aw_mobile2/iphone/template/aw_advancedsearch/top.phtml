$_category  = $this->getCurrentCategory();
$_helper    = $this->helper('catalog/output');
$layerBlock = $this->getLayout()->getBlock('advancedsearch.leftnav');
if ($layerBlock) {
    $layerBlock->setCategory($_category);
    $layerBlock->setMenuTitle(($this->getHeaderText() || $this->getHeaderText() === false) ? $this->getHeaderText() : $this->__("Search results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()));
}
$toolbarBlock = $this->getLayout()->getBlock('product_list_toolbar_top');
if ($toolbarBlock) {
    $toolbarBlock->setCategory($_category);
    $toolbarBlock->setMenuTitle(($this->getHeaderText() || $this->getHeaderText() === false) ? $this->getHeaderText() : $this->__("Search results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()));
}
?>
<h1 id="category_title" class="page-header__title"><?php echo ($this->getHeaderText() || $this->getHeaderText() === false) ? $this->getHeaderText() : $this->__("Search results for '%s'", $this->helper('catalogsearch')->getEscapedQueryText()) ?></h1>
<div class="category__filter category-filter">
    <?php echo $this->getChildHtml('product_list_toolbar_top')?>
    <?php echo $this->getChildHtml('catalogsearch_layer_nav')?>
</div>