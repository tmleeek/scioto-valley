<div class="aw-as-cms-pages-list">
    <?php echo $this->getPager() ?>
    <ul class="awas-cms-pages">
        <?php foreach($this->getResults() as $page) : ?>
        <li>
            <div class="title">
                <a href="<?php echo $this->getUrl($page->getData('identifier')) ?>"><?php echo $page->getData('title') ?></a>
            </div>
            <div class="content">
                <?php echo $this->getPageContent($page) ?>
                <?php if($page->getIsContentCropped()) : ?><b>...</b><?php endif ?>
            </div>
        </li>
        <?php endforeach ?>
    </ul>
    <?php echo $this->getPager() ?>
</div>