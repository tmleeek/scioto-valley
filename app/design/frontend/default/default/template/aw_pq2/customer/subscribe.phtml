?><?php /** @var AW_Pquestion2_Block_Customer_Subscribe $this */ ?>
<h4><?php echo $this->__('Subscribe to:');?></h4>
<?php $notificationTypes = $this->getNotificationTypes(); ?>
<?php if (count($notificationTypes) > 0): ?>
    <form action="<?php echo $this->getActionUrl()?>" method="POST">
        <p>
            <ul>
            <?php foreach ($notificationTypes as $type): ?>
                <li>
                    <input type="checkbox" id="aw_pq2_customer_subscribe_to_<?php echo $type['value']?>"
                           name="aw_pq2_customer_subscribe_to[]" value="<?php echo $type['value']?>"
                           <?php echo $type['checked']?'checked':'';?>
                        />
                    <label for="aw_pq2_customer_subscribe_to_<?php echo $type['value']?>"><?php echo $type['label'];?></label>
                </li>
            <?php endforeach;?>
            </ul>
        </p>
        <button type="submit" title="<?php echo $this->__('Save');?>" class="button">
            <span><span><?php echo $this->__('Save');?></span></span>
        </button>
    </form>
<?php endif;?>