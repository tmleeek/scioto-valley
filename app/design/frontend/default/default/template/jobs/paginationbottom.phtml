<?php $paginator = $this->getPaginator(); ?>

<?php if ($paginator->pageCount && $paginator->pageCount > 1): ?>
<div class="bottom_pagination">
			
	<?php
	    $url=$this->helper('jobs')->manageUrl('page');
	?>
	    <?php if ($paginator->pageCount): ?>
	   
	    <!-- Previous page link -->
		<?php if (isset($paginator->previous)): ?>
		  <a class="next i-next" href="<?php echo $url . 'page=' . $paginator->previous; ?>">
		     <img src="<?php echo $this->getSkinUrl('images/i_prev.jpg') ?>" alt="<?php echo $this->__('Previous') ?>" class="v-middle"  />
		  </a> 
	       
		<?php endif; ?>
		 
		<!-- Numbered page links -->
		<?php foreach ($paginator->pagesInRange as $page): ?>
		  <?php if ($page != $paginator->current): ?>
		    <a href="<?php echo $url . 'page=' . $page; ?>">
			<?php echo $page; ?>
		    </a> 
		  <?php else: ?>
		   <?php echo $page; ?>
		  <?php endif; ?>
		<?php endforeach; ?>
		 
		<!-- Next page link -->
		<?php if (isset($paginator->next)): ?>
		  <a class="next i-next" href="<?php echo $url . 'page=' . $paginator->next; ?>">
		     <img src="<?php echo $this->getSkinUrl('images/i_next.jpg') ?>" alt="<?php echo $this->__('Next') ?>" class="v-middle" />
		  </a>
	       
		<?php endif; ?>
	    
	    <?php endif; ?>
		
       
    </div>
<?php endif; ?>