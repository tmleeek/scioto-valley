			</block>
			<block type="flexslider/view" name="flexslider_all_left_bottom" template="flexslider/template.phtml" after="-">
				<action method="setPosition"><position>ALL_LEFT_BOTTOM</position></action>
				<action method="setScope"><scope>global</scope></action>
				<action method="setGlobal"><global>true</global></action>
			</block>
		</reference>
		<reference name="right">
