	<default>
		<reference name="root">
			<block type="flexslider/page_html_head" name="flexslider_head" as="flexslider_head" />
		</reference>
		<reference name="content">
			<block type="flexslider/view" name="flexslider_all_content_top" template="flexslider/template.phtml" before="-">
				<action method="setPosition"><position>ALL_CONTENT_TOP</position></action>
				<action method="setScope"><scope>global</scope></action>			
				<action method="setGlobal"><global>true</global></action>
			</block>
			<block type="flexslider/view" name="flexslider_all_content_bottom" template="flexslider/template.phtml" after="-">
				<action method="setPosition"><position>ALL_CONTENT_BOTTOM</position></action>
				<action method="setScope"><scope>global</scope></action>
				<action method="setGlobal"><global>true</global></action>
			</block>
		</reference>
		<reference name="left">
