				<action method="setScope"><scope>global</scope></action>
				<action method="setGlobal"><global>true</global></action>
			</block>
		</reference>
		<reference name="footer">
			<block type="flexslider/view" name="flexslider_all_footer_top" template="flexslider/template.phtml" before="-">
				<action method="setPosition"><position>ALL_FOOTER_TOP</position></action>
