?><?php $items = $this->getItems(); ?>
<?php if (count($items)) : ?>
    <ul>
        <?php foreach ($items as $item): ?>
            <li>
                <input type="hidden" name="url" value="<?php echo $item['url'] ?>">
                <ol><?php echo $item['content'] ?></ol>
            </li>
        <?php endforeach; ?>
    </ul>
    <?php if ($this->isCanShowAllResultsButton()) : ?>
        <div class="aw-sas-all-results-wrapper">
            <a href="<?php echo $this->getResultUrl(Mage::helper('searchautocomplete')->getSearchedQuery()); ?>" class="aw-sas-all-results"><?php echo $this->__('Show All'); ?></a>
        </div>
    <?php endif; ?>
<?php else : ?>
    <ul style="display:none;"><li class="aw-sas-empty"></li></ul>
    <div><?php echo Mage::helper('searchautocomplete/config')->getInterfaceNothingFoundNotice(); ?></div>
<?php endif; ?>