<config>
    <events>
        <core_block_abstract_to_html_before>
            <observers>
                <ampaction>
                    <type>singleton</type>
                    <class>ampaction/observer</class>
                    <method>onCoreBlockAbstractToHtmlBefore</method>
                </ampaction>
            </observers>
        </core_block_abstract_to_html_before>
    </events>
    <translate>
        <modules>
