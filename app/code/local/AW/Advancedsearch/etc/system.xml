<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <awadvancedsearch translate="label" module="awadvancedsearch">
            <label>Advanced Search</label>
            <tab>awall</tab>
            <frontend_type>text</frontend_type>
            <sort_order>140</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable>
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                    </fields>
                </general>
                <sphinx translate="label">
                    <label>Sphinx</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <server_path>
                            <label>Server Path</label>
                            <comment>Path to Sphinx searchd daemon (leave it blank for default)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_path>
                        <server_addr>
                            <label>Server Address</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_addr>
                        <server_port>
                            <label>Server Port</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </server_port>
                        <match_mode>
                            <label>Match mode</label>
                            <comment><![CDATA[<a target="_blank" href="http://sphinxsearch.com/docs/current.html#matching-modes">Sphinx reference manual</a>]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>awadvancedsearch/source_sphinx_matchmode</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </match_mode>
                        <test_connection>
                            <label></label>
                            <comment></comment>
                            <frontend_type>text</frontend_type>
                            <frontend_model>awadvancedsearch/system_config_form_fieldset_awadvancedsearch_test</frontend_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </test_connection>
                    </fields>
                </sphinx>
                <search_options translate="label">
                    <label>Search Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_wildcard translate="label">
                            <label>Enable Wildcard Search</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable_wildcard>
                        <wildcard_type translate="label">
                            <label>Wildcard Search Type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>awadvancedsearch/source_sphinx_wildcard</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <enable_wildcard>1</enable_wildcard>
                            </depends>
                        </wildcard_type>
                        <enable_morphology translate="label">
                            <label>Enable Morphology</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enable_morphology>
                        <morphology_dictionary_list translate="label ">
                            <label>Morphology Dictionary</label>
                            <comment><![CDATA[Comma separated<br /><a target="_blank" href="http://sphinxsearch.com/docs/current.html#conf-morphology">Sphinx Morphology reference manual</a>]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <enable_morphology>1</enable_morphology>
                            </depends>
                        </morphology_dictionary_list>
                    </fields>
                </search_options>
                <searchd translate="label">
                    <label>Manage searchd daemon</label>
                    <frontend_type>text</frontend_type>
                    <frontend_model>awadvancedsearch/system_config_form_fieldset_awadvancedsearch_searchd</frontend_model>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </searchd>
            </groups>
        </awadvancedsearch>
    </sections>
</config>