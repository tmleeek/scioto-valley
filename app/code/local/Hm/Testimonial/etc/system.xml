                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </allow_media_popup>
                        <width translate="label">
                            <label>Width of Media File(Video, Image)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </width>
                        <height translate="label">
                            <label>Height of Media File(Video, Image)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>21</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </height>                       
                        <maxfilesize translate="label">
                            <label>Max Upload File Size </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>22</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <comment>0 is unlimited. Unit is Megabyte(Mb)</comment>
                        </maxfilesize>
                        <!-- <background translate="label">
                            <label>Background of Media File</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </background> -->
                    </fields>
                </general>
                <email translate="label" module="testimonial">
                    <label>Email Notification</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enable translate="label">
