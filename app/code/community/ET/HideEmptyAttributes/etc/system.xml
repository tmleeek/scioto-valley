                <info translate="label">
                    <label>Hide Empty Attributes information</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <support_information>
                            <frontend_model>ethideemptyattributes/adminhtml_support</frontend_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </support_information>
                    </fields>
                </info>
                <general tranalste="label">
                    <label>Hide Empty Attributes Options</label>
                    <frontend_type>text</frontend_type>
